*DECLARACION CONSTANTES

SCDR   EQU   $102F
SCCR2  EQU   $102D
SCSR   EQU   $102E
SCCR1  EQU   $102C
BAUD   EQU   $102B
HPRIO  EQU   $103C
SPCR   EQU   $1028
CSCTL  EQU   $105D
OPT2   EQU   $1038
PORTG  EQU   $1002
DDRA   EQU   $1001
DDRD   EQU   $1009
DDRG   EQU   $1003

*DECLARACION DE VARIABLES

ORDEN EQU  $0000
TEMP  EQU  $0001
U     EQU  $0010
D     EQU  $0011
C     EQU  $0012
UM    EQU  $0013
SHARE EQU  $0014
CONT  EQU  $0020

*PROGRAMA

      ORG $8000
      
      LDS #$00FF
      JSR SERIAL

LIMPIA      
      CLR ORDEN
      CLR TEMP
      CLR U
      CLR D
      CLR C
      CLR UM
      CLR CONT

INICIO

      LDAA #'?
      STAA ORDEN
CICLO
      LDAA ORDEN
      CMPA #'?
      BEQ  CICLO
      CMPA #'=
      BEQ  D2R

      LDAB UM
      BNE SAVE

      STAA UM
      INC TEMP
      JMP INICIO
SAVE
      LDAB C
      BNE SAVE1

      STAA C
      INC TEMP
      JMP INICIO
SAVE1
      LDAB D
      BNE SAVE2

      STAA D
      INC TEMP
      JMP INICIO
SAVE2

      STAA U
      INC TEMP
      JMP INICIO

*** Convierte decimal a romano ***
D2R
*** Verifica cuantos digitos hay **
      LDAA TEMP
      CMPA #3
      BEQ ACOMODA3
      CMPA #2
      BEQ ACOMODA2
      CMPA #1
      BEQ ACOMODA1
      
      LDAB UM
      CMPB #30
      BEQ MD

UMCICLO
      LDAA #'M
      STAA SHARE
      JSR DATARX
      DECB
      CMPB #$30
      BEQ MD
      JMP UMCICLO

ACOMODA3
      *** Baja decena a unidad *** 
      LDAA D
      STAA U
      *** Baja centena a unidad ***
      LDAA C
      STAA D
      *** Baja la unidad de millar por centena ***
      LDAA UM
      STAA C
      CLR UM
      JMP MD

ACOMODA2
      *** Baja centena a unidad *** 
      LDAA C
      STAA U
      *** Baja unidad de millar a decena ***
      LDAA UM
      STAA D
      *** Limpia datos ***
      CLR C
      CLR UM
      JMP MD2

ACOMODA1
      *** Baja unidad de millar a unidad ***
      LDAA UM
      STAA U
      *** Limpia datos ***
      CLR UM
      JMP MD3

MD

      LDAB C
      CMPB #$30
      BEQ MD2
      JSR FORMATOCENTENA

MD2

      LDAB D
      CMPB #$30
      BEQ MD3
      JSR FORMATODECENA

MD3

      LDAB U
      CMPB #$30
      BEQ SALTE
      JSR FORMATOUNIDAD

SALTE
      JMP LIMPIA

***********************************
* Unidades
***********************************

FORMATOUNIDAD
      
      LDAA U
      CMPA #$34
      BEQ USPECIAL
      BLO UCICLO
      CMPA #$39
      BEQ USPECIAL9
      CMPA #$35
      BHS USPECIAL5

USPECIAL9
      LDAA #'I
      STAA SHARE
      JSR DATARX
      LDAA #'X
      STAA SHARE
      JSR DATARX
      JMP FINU

UCICLO
      LDAA #'I
      STAA SHARE
      JSR DATARX
      DECB
      CMPB #$30
      BEQ FINU
      JMP UCICLO

USPECIAL5
      LDAA #'V
      STAA SHARE
      JSR DATARX
      SUBB #5
      CMPB #$30
      BHI UCICLO
      JMP FINU

USPECIAL
      LDAA #'I
      STAA SHARE
      JSR DATARX
      LDAA #'V
      STAA SHARE
      JSR DATARX

FINU
      RTS

***********************************
* Dencenas
***********************************

FORMATODECENA
      
      LDAA D
      CMPA #$34
      BEQ DSPECIAL
      BLO DCICLO
      CMPA #$39
      BEQ DSPECIAL9
      CMPA #$35
      BHS DSPECIAL5

DSPECIAL9
      LDAA #'X
      STAA SHARE
      JSR DATARX
      LDAA #'C
      STAA SHARE
      JSR DATARX
      JMP FIND

DCICLO
      LDAA #'X
      STAA SHARE
      JSR DATARX
      DECB
      CMPB #$30
      BEQ FIND
      JMP DCICLO

DSPECIAL5
      LDAA #'L
      STAA SHARE
      JSR DATARX
      SUBB #5
      CMPB #$30
      BHI DCICLO
      JMP FIND

DSPECIAL
      LDAA #'X
      STAA SHARE
      JSR DATARX
      LDAA #'L
      STAA SHARE
      JSR DATARX

FIND
      RTS

***********************************
* Centenas
***********************************

FORMATOCENTENA
      
      LDAA C
      CMPA #$34
      BEQ CSPECIAL
      BLO CCICLO
      CMPA #$39
      BEQ CSPECIAL9
      CMPA #$35
      BHS CSPECIAL5

CSPECIAL9
      LDAA #'C
      STAA SHARE
      JSR DATARX
      LDAA #'M
      STAA SHARE
      JSR DATARX
      JMP FINC

CCICLO
      LDAA #'C
      STAA SHARE
      JSR DATARX
      DECB
      CMPB #$30
      BEQ FINC
      JMP CCICLO

CSPECIAL5
      LDAA #'D
      STAA SHARE
      JSR DATARX
      SUBB #5
      CMPB #$30
      BHI CCICLO
      JMP FINC

CSPECIAL
      LDAA #'C
      STAA SHARE
      JSR DATARX
      LDAA #'D
      STAA SHARE
      JSR DATARX

FINC
      RTS

***********************************
* SERIAL
***********************************

SERIAL

      LDAA  #$00    * CONFIG TODO EL PUERTO  A COMO ENTRADAS
      STAA  DDRA    * EL PUERTO A
       
      LDAA  #$FF    * CONFIG TODO EL PUERTO  G COMO SALIDAS
      STAA  DDRG    * EL PUERTO G 

      LDAA  #$00    * SE PONE PUERTO G EN CEROS
      STAA  PORTG


      LDD   #$302C  * CONFIGURA PUERTO SERIAL
      STAA  BAUD    * BAUD  9600  para cristal de 8MHz
      STAB  SCCR2   * HABILITA  RX Y TX PERO INTERRUPCN SOLO RX
      LDAA  #$00
      STAA  SCCR1   * 8 BITS

      LDAA  #$FE    * CONFIG PUERTO D COMO SALIDAS (EXCEPTO PD0)
      STAA  DDRD    * SEA  ENABLE DEL DISPLAY  PD4  Y RS PD3
                     
      
      LDAA  #$04
      STAA  HPRIO

      LDAA  #$00
      TAP
      RTS

***********************************
* CARRY RETURN
***********************************

CRYTRN
       LDX   #SCSR 
       LDAA  SCSR
       LDAA  #$0A                  
       STAA  SCDR
CR1
       BRCLR $00,X,#$80 CR1        

       LDAA SCSR
       LDAA #$0D                   
       STAA SCDR
CR2
       BRCLR $00,X,#$80 CR2        

       RTS

***********************************
*  DESPLIEGUE DE DATO RECIBIDO
***********************************

DATARX
       LDX   #SCSR 
       LDAA  SCSR
       LDAA  SHARE                  
       STAA  SCDR
DT1
       BRCLR $00,X,#$80 DT1           

       RTS

***********************************
* ATENCION A INTERRUPCION SERIAL
***********************************
      ORG  $F100
  
      PSHA
 
      LDAA SCSR
      LDAA SCDR
      STAA ORDEN

      PULA

      RTI

***********************************
* VECTOR INTERRUPCION SERIAL
***********************************
       ORG   $FFD6
       FCB   $F1,$00       

***********************************
*RESET
***********************************
       ORG    $FFFE
RESET  FCB    $80,$00
***********************************
       END   
